<!DOCTYPE html>
<html>
<head>
  <title>RouteTime</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	<nav class="navbar navbar-inverse">
	  <div class="container">
	    <div class="navbar-header">
	    	<% if current_user %> 
		  		<li><%= link_to "Log Out", logout_path, method: :delete if current_user%></li>
		  		<li>Welcome <%= current_user.name %>!</li>
		  		<li><%= image_tag(current_user.photo) %></li>
				<% else %> 
	      	<li><%= link_to 'Log-in with Google+', '/auth/google' unless current_user %></li>
	      <% end %>
	    </div>
	    <div id="navbar">
	      <ul class="nav navbar-nav"></ul>
	    </div>
	  </div>
	</nav>

	<div class="container">
	  <% flash.each do |key, value| %>
	    <div class="alert alert-<%= key %>">
	      <%= value %>
	    </div>
	  <% end %>

	  <%= yield %>
	</div>

</body>
</html>
